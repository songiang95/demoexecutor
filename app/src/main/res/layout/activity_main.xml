<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_single_thread"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Single thread pool" />

    <Button
        android:id="@+id/btn_fixed_thread_pool"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Fixed thread pool" />

    <Button
        android:id="@+id/btn_cached_thread_pool"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Cached thread pool" />

    <Button
        android:id="@+id/btn_thread_pool_executor"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Thread pool executor" />


</LinearLayout>